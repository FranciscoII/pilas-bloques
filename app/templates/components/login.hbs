|<div class="center">
  <PaperForm @onSubmit={{action "doLogin"}} as |form|>
    <img src="imagenes/libros/primer-ciclo.png" />

    <PbInput @label="Usuario"
      @model={{ credentials.username }} 
      @required={{ true }} />

    <PbInput @type="password" @label="Contraseña"
      @model={{ credentials.password }} 
      @required={{ true }} />

    {{#if wrongLogin}}
      <PaperCard as |card|>
        <card.title as |title|>
          <title.text as |text|>
            <text.headline>Usuario o contraseña incorrectos, volvé a intentar</text.headline>
          </title.text>
        </card.title>
        <card.actions>
          <Button class="link" @onClick={{action (mut openRecovery) true}}>
            ¿Olvidaste tu usuario o contraseña?
          </Button>
        </card.actions>
      </PaperCard>
    {{/if}}

    <Button type="submit">
      Ingresar
    </Button>
  </PaperForm>

  <Button class="link" @onClick={{action (mut openRecovery) true}}>
    Olvidé mi usuario o constraseña
  </Button>


  <p> ¿No tenés una cuenta? </p>
  <Link @href={{href-to "register"}}>
    Registrate
  </Link>
</div>

<ModalToggle @title="Recuperar contraseña" @open={{openRecovery}}>
  En construcción, si tenés problemas con tu cuenta contactate con el equipo de desarrollo.
</ModalToggle>