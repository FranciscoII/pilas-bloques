<PaperInput @type={{ type }} @label={{ label }}
  @value={{ model }} 
  @onChange={{ action (mut model) }}
  @errorMessages={{ hash required="Este campo es necesario" }} 
  @customValidations={{ or customValidations (array) }}
  @focusOut={{ focusOut }}
  @required={{ required }}
  ...attributes >
  {{#if error}}
    <div class="md-input-messages-animation md-auto-hide" id="ember267-error-messages">
      <div id="error-input-ember267-0" class="paper-input-error ng-enter ng-enter-active md-input-message-animation" style="opacity: 1; margin-top: 0">
        {{ error }}
      </div>
    </div>
  {{/if}}
</PaperInput>
