<div class="workspace-buttons flex layout-row">
    <span class="flex"></span>
    <input type='file' id="cargarActividadInput" accept=".spbq" class="hidden" />
    <a id="placeholder" class="hidden">..</a>
    <Button @tooltip={{"Abrir solución"}} @isMini={{true}} @isFab={{true}} @isRaised={{true}} @onClick={{action "abrirSolucion"}}>{{paper-icon "folder"}}</Button>
    <Button @tooltip={{"Guardar solución"}} @isMini={{true}} @isFab={{true}} @isRaised={{true}} @onClick={{action "guardarSolucion"}}>{{paper-icon "save"}}</Button>
    <Button @tooltip={{"Borrar solución"}} @isMini={{true}} @isFab={{true}} @isRaised={{true}} @onClick={{action (mut deleteDialogIsOpen) true}}>{{paper-icon "delete"}}</Button>
    <Button @tooltip={{if shouldUseFloatingMode "Salir de Pantalla Completa" "Pantalla Completa"}} @isMini={{true}} @isFab={{true}} @isRaised={{true}} @onClick={{changeScreenMode}}>{{paper-icon (if shouldUseFloatingMode "fullscreen_exit" "fullscreen")}}</Button>
</div>

<ModalToggle @open={{deleteDialogIsOpen}}>
  <div class="center">
  ¡Cuidado! Al borrar la solución se perderán tus cambios.
  <div>
    <Button @isRaised={{true}} @onClick={{action "borrarSolucion"}}>Borrar la solucion</Button>
  </div>
</div>
</ModalToggle>
