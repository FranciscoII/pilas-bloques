<Modal @title={{t (compute (action textTag "title"))}} @onClose={{onClose}}>
  <div class='expectationsModal'>
    <p>{{t (compute (action textTag  "description"))}}</p>
    <img src="imagenes/libros/primer-ciclo.png" />
  </div>

  {{#if (compute (action isControl))}}
    <ControlGroupExpectations
      @expects={{compute (action expects)}}
    />
  {{else}}
    <TreatmentGroupExpectations
      @passedExpects={{passedExpects}}
      @failedExpects={{failedExpects}}
      @passedExpectsValue={{passedExpectsValue}}
    />
  {{/if}}
</Modal>
